<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="100dp"
    android:stretchColumns="0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="110dp"
        android:layout_y="10dp"

        android:text="Employee Detail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="50dp"
        android:text="Employee ID" />

    <EditText
        android:id="@+id/editEmpid"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_x="150dp"
        android:layout_y="50dp"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="100dp"
        android:text="Employee Name" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_x="150dp"
        android:layout_y="100dp"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="150dp"
        android:text="Employee Salary" />

    <EditText
        android:id="@+id/editsalary"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_x="150dp"
        android:layout_y="150dp"
        android:inputType="number" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="200dp"
        android:text="Add Employee" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_x="160dp"
        android:layout_y="200dp"
        android:text="Delete Employee" />n

    <Button
        android:id="@+id/btnModify"

        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="250dp"
        android:text="Modify Employee" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_x="160dp"
        android:layout_y="250dp"
        android:text="View Employee" />

    <Button
        android:id="@+id/btnViewAll"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_x="85dp"
        android:layout_y="300dp"
        android:text="View All Employee" />
</LinearLayout>
